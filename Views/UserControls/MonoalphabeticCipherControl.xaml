<UserControl x:Class="SecurityProject.Views.UserControls.MonoalphabeticCipherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ”‘ Monoalphabetic Cipher" 
                      FontSize="32" FontWeight="Bold"
                      Foreground="{StaticResource TextBrush}"
                      Margin="0,0,0,8"/>
            <TextBlock Text="A fixed substitution cipher where each plaintext letter maps to exactly one ciphertext letter."
                      FontSize="13"
                      Foreground="{StaticResource TextSecondaryBrush}"
                      TextWrapping="Wrap"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Key -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Substitution Key (26 unique letters)" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="ModeComboBox" 
                                     SelectedIndex="0"
                                     SelectionChanged="ModeComboBox_SelectionChanged"
                                     Margin="20,0,0,0"
                                     Width="120"
                                     FontSize="13"
                                     Padding="8,4">
                                <ComboBoxItem Content="ðŸ”’ Encrypt"/>
                                <ComboBoxItem Content="ðŸ”“ Decrypt"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <TextBox x:Name="KeyInput"
                                Background="{StaticResource SurfaceBrush}"
                                Foreground="{StaticResource TextBrush}"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                BorderThickness="2"
                                MinHeight="45"
                                MaxHeight="80"
                                FontSize="16"
                                FontFamily="Consolas"
                                Padding="12,12"
                                TextWrapping="Wrap"
                                AcceptsReturn="False"
                                VerticalScrollBarVisibility="Auto"
                                TextChanged="KeyInput_TextChanged"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="ðŸŽ² Generate Random Key" 
                                   Style="{StaticResource ModernButton}"
                                   Click="GenerateKeyButton_Click"
                                   Background="{StaticResource SecondaryBrush}"
                                   Padding="15,8"
                                   FontSize="13"/>
                            <TextBlock Text="Example: ZYXWVUTSRQPONMLKJIHGFEDCBA" 
                                      FontSize="11"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      VerticalAlignment="Center"
                                      Margin="15,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Input Output Side by Side -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Input -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="0" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock x:Name="InputLabel" Text="Plain Text" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="PlainTextInput"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    BorderThickness="2"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontSize="14"
                                    Padding="12"
                                    TextChanged="PlainTextInput_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Output -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock x:Name="OutputLabel" Text="Cipher Text" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="CipherTextOutput"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    BorderThickness="2"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontSize="14"
                                    Padding="12"
                                    IsReadOnly="True"
                                    FontWeight="Semibold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Step-by-Step Process -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Step-by-Step Process" 
                                  FontSize="16" FontWeight="Semibold"
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,0,10"/>
                        
                        <ScrollViewer Height="400" 
                                     VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="StepsDisplay">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceBrush}"
                                               CornerRadius="6"
                                               Padding="12"
                                               Margin="0,0,0,8"
                                               BorderThickness="1"
                                               BorderBrush="{StaticResource PrimaryBrush}"
                                               Opacity="0">
                                            <Border.Triggers>
                                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="0" To="1" Duration="0:0:0.4">
                                                                <DoubleAnimation.EasingFunction>
                                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                                </DoubleAnimation.EasingFunction>
                                                            </DoubleAnimation>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Border.Triggers>
                                            <StackPanel>
                                                <TextBlock FontSize="14" FontWeight="Bold" 
                                                          Foreground="{StaticResource PrimaryBrush}"
                                                          Margin="0,0,0,5">
                                                    <Run Text="Step "/>
                                                    <Run Text="{Binding StepNumber}"/>
                                                    <Run Text=": "/>
                                                    <Run Text="{Binding Description}"/>
                                                </TextBlock>
                                                <Grid Margin="0,5,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding Input}" 
                                                               FontSize="12"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontFamily="Consolas"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="â†’" 
                                                               FontSize="16"
                                                               Foreground="{StaticResource PrimaryBrush}"
                                                               FontWeight="Bold"
                                                               Margin="10,0"/>
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding Output}" 
                                                               FontSize="12"
                                                               Foreground="{StaticResource TextBrush}"
                                                               FontFamily="Consolas"
                                                               FontWeight="Semibold"
                                                               TextWrapping="Wrap"/>
                                                </Grid>
                                                <TextBlock Text="{Binding Explanation}" 
                                                          FontSize="11"
                                                          Foreground="{StaticResource TextSecondaryBrush}"
                                                          FontStyle="Italic"
                                                          Margin="0,5,0,0"
                                                          TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Back Button -->
                <Button Content="â† Back to Menu" 
                       HorizontalAlignment="Left" Margin="0,15,0,0"
                       Click="BackButton_Click"
                       Style="{StaticResource ModernButton}"
                       Background="{StaticResource SurfaceBrush}"
                       Foreground="{StaticResource TextBrush}"
                       Padding="15,8"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
