<UserControl x:Class="SecurityProject.Views.UserControls.Base64CipherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ“¦ Base64 Encoding" 
                      FontSize="32" FontWeight="Bold"
                      Foreground="{StaticResource TextBrush}"
                      Margin="0,0,0,8"/>
            <TextBlock Text="Base64 is a binary-to-text encoding scheme that represents binary data in ASCII string format. It's commonly used for encoding data in URLs, emails, and data transmission."
                      FontSize="13"
                      Foreground="{StaticResource TextSecondaryBrush}"
                      TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Mode Selection -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Operation Mode" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="ModeComboBox" 
                                     SelectedIndex="0"
                                     SelectionChanged="ModeComboBox_SelectionChanged"
                                     Margin="20,0,0,0"
                                     Width="120"
                                     FontSize="13"
                                     Padding="8,4">
                                <ComboBoxItem Content="ðŸ“¤ Encode"/>
                                <ComboBoxItem Content="ðŸ“¥ Decode"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Input Output Side by Side -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Input -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="0" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock x:Name="InputLabel" Text="Plain Text" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="PlainTextInput"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    BorderThickness="2"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontSize="14"
                                    Padding="12"
                                    TextChanged="PlainTextInput_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Output -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock x:Name="OutputLabel" Text="Base64 Encoded" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="CipherTextOutput"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    BorderThickness="2"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontSize="14"
                                    FontFamily="Consolas"
                                    Padding="12"
                                    IsReadOnly="True"
                                    FontWeight="Semibold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Step-by-Step Process -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Step-by-Step Process" 
                                  FontSize="16" FontWeight="Semibold"
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,0,10"/>
                        
                        <ScrollViewer Height="400" 
                                     VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="StepsDisplay">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceBrush}"
                                               CornerRadius="6"
                                               Padding="12"
                                               Margin="0,0,0,8"
                                               BorderThickness="1"
                                               BorderBrush="{StaticResource PrimaryBrush}">
                                            <StackPanel>
                                                <TextBlock FontSize="14" FontWeight="Bold" 
                                                          Foreground="{StaticResource PrimaryBrush}"
                                                          Margin="0,0,0,5">
                                                    <Run Text="Step "/>
                                                    <Run Text="{Binding StepNumber}"/>
                                                    <Run Text=": "/>
                                                    <Run Text="{Binding Description}"/>
                                                </TextBlock>
                                                <Grid Margin="0,5,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding Input}" 
                                                               FontSize="12"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontFamily="Consolas"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="â†’" 
                                                               FontSize="16"
                                                               Foreground="{StaticResource PrimaryBrush}"
                                                               FontWeight="Bold"
                                                               Margin="10,0"/>
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding Output}" 
                                                               FontSize="12"
                                                               Foreground="{StaticResource TextBrush}"
                                                               FontFamily="Consolas"
                                                               FontWeight="Semibold"
                                                               TextWrapping="Wrap"/>
                                                </Grid>
                                                <TextBlock Text="{Binding Explanation}" 
                                                          FontSize="11"
                                                          Foreground="{StaticResource TextSecondaryBrush}"
                                                          FontStyle="Italic"
                                                          Margin="0,5,0,0"
                                                          TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Back Button -->
                <Button Content="â† Back to Menu" 
                       HorizontalAlignment="Left" Margin="0,15,0,0"
                       Click="BackButton_Click"
                       Style="{StaticResource ModernButton}"
                       Background="{StaticResource SurfaceBrush}"
                       Foreground="{StaticResource TextBrush}"
                       Padding="15,8"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

