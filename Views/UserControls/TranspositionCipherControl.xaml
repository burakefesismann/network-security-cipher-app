<UserControl x:Class="SecurityProject.Views.UserControls.TranspositionCipherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ”€ Transposition Cipher" 
                      FontSize="32" FontWeight="Bold"
                      Foreground="{StaticResource TextBrush}"
                      Margin="0,0,0,8"/>
            <TextBlock Text="A columnar transposition cipher where the plaintext is written in rows and read in columns."
                      FontSize="13"
                      Foreground="{StaticResource TextSecondaryBrush}"
                      TextWrapping="Wrap"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Key -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Number of Columns" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="ModeComboBox" 
                                     SelectedIndex="0"
                                     SelectionChanged="ModeComboBox_SelectionChanged"
                                     Margin="20,0,0,0"
                                     Width="120"
                                     FontSize="13"
                                     Padding="8,4">
                                <ComboBoxItem Content="ðŸ”’ Encrypt"/>
                                <ComboBoxItem Content="ðŸ”“ Decrypt"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <Slider x:Name="KeySlider" 
                               Minimum="2" Maximum="20" Value="5"
                               ValueChanged="KeySlider_ValueChanged"
                               TickFrequency="1" IsSnapToTickEnabled="True"
                               Margin="0,0,0,8"/>
                        
                        <TextBlock x:Name="KeyValueText" 
                                  Text="Columns: 5"
                                  FontSize="22" FontWeight="Bold"
                                  Foreground="{StaticResource PrimaryBrush}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Input Output Side by Side -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Input -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="0" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock x:Name="InputLabel" Text="Plain Text" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="PlainTextInput"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    BorderThickness="2"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontSize="14"
                                    Padding="12"
                                    TextChanged="PlainTextInput_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Output -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock x:Name="OutputLabel" Text="Cipher Text" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="CipherTextOutput"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    BorderThickness="2"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontSize="14"
                                    Padding="12"
                                    IsReadOnly="True"
                                    FontWeight="Semibold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Visual Matrix -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Encryption Matrix Visualization" 
                                  FontSize="16" FontWeight="Semibold"
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,0,10"/>
                        
                        <ScrollViewer Height="180" 
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="MatrixDisplay">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceBrush}"
                                               BorderBrush="{StaticResource PrimaryBrush}"
                                               BorderThickness="1"
                                               Width="40" Height="40"
                                               Margin="1">
                                            <TextBlock Text="{Binding}"
                                                      FontSize="16"
                                                      FontWeight="Bold"
                                                      Foreground="{StaticResource TextBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Back Button -->
                <Button Content="â† Back to Menu" 
                       HorizontalAlignment="Left" Margin="0,15,0,0"
                       Click="BackButton_Click"
                       Style="{StaticResource ModernButton}"
                       Background="{StaticResource SurfaceBrush}"
                       Foreground="{StaticResource TextBrush}"
                       Padding="15,8"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
