<UserControl x:Class="SecurityProject.Views.UserControls.HillCipherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ”ï¸ Hill Cipher" 
                      FontSize="32" FontWeight="Bold"
                      Foreground="{StaticResource TextBrush}"
                      Margin="0,0,0,8"/>
            <TextBlock Text="A polygraphic substitution cipher based on linear algebra using matrix multiplication."
                      FontSize="13"
                      Foreground="{StaticResource TextSecondaryBrush}"
                      TextWrapping="Wrap"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Key Matrix -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Key Matrix (2x2)" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="ModeComboBox" 
                                     SelectedIndex="0"
                                     SelectionChanged="ModeComboBox_SelectionChanged"
                                     Margin="20,0,0,0"
                                     Width="120"
                                     FontSize="13"
                                     Padding="8,4">
                                <ComboBoxItem Content="ðŸ”’ Encrypt"/>
                                <ComboBoxItem Content="ðŸ”“ Decrypt"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBox x:Name="M00" Grid.Row="0" Grid.Column="0" Margin="4" 
                                    Text="3" TextChanged="MatrixChanged"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    FontSize="14"
                                    Padding="8"/>
                            <TextBox x:Name="M01" Grid.Row="0" Grid.Column="1" Margin="4" 
                                    Text="3" TextChanged="MatrixChanged"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    FontSize="14"
                                    Padding="8"/>
                            <TextBox x:Name="M10" Grid.Row="1" Grid.Column="0" Margin="4" 
                                    Text="2" TextChanged="MatrixChanged"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    FontSize="14"
                                    Padding="8"/>
                            <TextBox x:Name="M11" Grid.Row="1" Grid.Column="1" Margin="4" 
                                    Text="5" TextChanged="MatrixChanged"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    FontSize="14"
                                    Padding="8"/>
                        </Grid>

                        <TextBlock Text="Determinant must be coprime with 26" 
                                  FontSize="11"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Input Output Side by Side -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Input -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="0" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock x:Name="InputLabel" Text="Plain Text" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="PlainTextInput"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    BorderThickness="2"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontSize="14"
                                    Padding="12"
                                    TextChanged="PlainTextInput_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Output -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock x:Name="OutputLabel" Text="Cipher Text" 
                                      FontSize="16" FontWeight="Semibold"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="CipherTextOutput"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    BorderThickness="2"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    FontSize="14"
                                    Padding="12"
                                    IsReadOnly="True"
                                    FontWeight="Semibold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Back Button -->
                <Button Content="â† Back to Menu" 
                       HorizontalAlignment="Left" Margin="0,15,0,0"
                       Click="BackButton_Click"
                       Style="{StaticResource ModernButton}"
                       Background="{StaticResource SurfaceBrush}"
                       Foreground="{StaticResource TextBrush}"
                       Padding="15,8"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
