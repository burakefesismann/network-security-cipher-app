<Window x:Class="SecurityProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityProject"
        mc:Ignorable="d"
        Title="🔐 Network Security - Cryptographic Techniques"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        RenderOptions.BitmapScalingMode="HighQuality"
        TextOptions.TextFormattingMode="Display"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    
    <Window.Resources>
        <Storyboard x:Key="FadeInAnimation" Storyboard.TargetProperty="Opacity">
            <DoubleAnimation From="0" To="1" Duration="0:0:0.6"/>
        </Storyboard>
        <Storyboard x:Key="SlideInAnimation">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                              From="0,-20,0,0" To="0,0,0,0" Duration="0:0:0.5"/>
        </Storyboard>
        <Storyboard x:Key="ScaleAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" 
                          From="0.8" To="1" Duration="0:0:0.4"/>
            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" 
                          From="0.8" To="1" Duration="0:0:0.4"/>
        </Storyboard>
    </Window.Resources>
    
    <Grid>
        <!-- Close Button -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                Width="40" Height="40" Margin="5" 
                Click="CloseButton_Click"
                Background="Transparent" BorderThickness="0"
                FontSize="20" Content="✕" Foreground="{StaticResource TextSecondaryBrush}"
                Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                          To="#FF4444" Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetProperty="Foreground.Color" 
                                          To="White" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <!-- Ana Menu Grid -->
        <Grid x:Name="MainMenuGrid" Margin="40,60,40,40">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                <TextBlock Text="🔐 Network Security"
                          FontSize="48" FontWeight="Black"
                          Foreground="{StaticResource TextBrush}"
                          Margin="0,0,0,15"
                          TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#6366F1" BlurRadius="10" ShadowDepth="0" Opacity="0.25" RenderingBias="Performance"/>
                    </TextBlock.Effect>
                    <TextBlock.RenderTransform>
                        <TranslateTransform/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <TextBlock Text="Cryptographic Techniques - Interactive Demonstrations"
                          FontSize="20"
                          FontWeight="Medium"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          Margin="0,0,0,60"
                          TextAlignment="Center"
                          Opacity="0.9">
                    <TextBlock.RenderTransform>
                        <TranslateTransform/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <!-- Algorithm Cards Grid -->
                <UniformGrid Columns="3" Rows="2" 
                           HorizontalAlignment="Stretch" 
                           Margin="0,0,0,30">
                    
                    <!-- Caesar Cipher -->
                    <Border Style="{StaticResource CardStyle}" Margin="10" x:Name="CaesarCard"
                            PreviewMouseDown="CaesarCard_MouseDown">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2A2F45" Offset="0"/>
                                <GradientStop Color="#EC4899" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel>
                            <Border Background="{StaticResource CaesarAccent}"
                                    Width="70" Height="70" CornerRadius="35"
                                    HorizontalAlignment="Center" Margin="0,0,0,15">
                                <Border.Effect>
                                    <DropShadowEffect Color="#EC4899" BlurRadius="12" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>
                                </Border.Effect>
                                <TextBlock Text="🔒" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Caesar Cipher"
                                      FontSize="24" FontWeight="Bold"
                                      Foreground="{StaticResource TextBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Character substitution cipher named after Julius Caesar"
                                      FontSize="13" LineHeight="20"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"
                                      Margin="0,0,0,25"/>
                            <Button Content="Try It →"
                                   Style="{StaticResource ModernButton}"
                                   Click="CaesarButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Monoalphabetic Cipher -->
                    <Border Style="{StaticResource CardStyle}" Margin="10" x:Name="MonoalphabeticCard"
                            PreviewMouseDown="MonoalphabeticCard_MouseDown">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2A2F45" Offset="0"/>
                                <GradientStop Color="#F59E0B" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel>
                            <Border Background="{StaticResource MonoAccent}"
                                    Width="70" Height="70" CornerRadius="35"
                                    HorizontalAlignment="Center" Margin="0,0,0,15">
                                <Border.Effect>
                                    <DropShadowEffect Color="#F59E0B" BlurRadius="12" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>
                                </Border.Effect>
                                <TextBlock Text="🔑" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Monoalphabetic"
                                      FontSize="24" FontWeight="Bold"
                                      Foreground="{StaticResource TextBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Substitution cipher with fixed mapping"
                                      FontSize="13" LineHeight="20"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"
                                      Margin="0,0,0,25"/>
                            <Button Content="Try It →"
                                   Style="{StaticResource ModernButton}"
                                   Click="MonoalphabeticButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Playfair Cipher -->
                    <Border Style="{StaticResource CardStyle}" Margin="10" x:Name="PlayfairCard"
                            PreviewMouseDown="PlayfairCard_MouseDown">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2A2F45" Offset="0"/>
                                <GradientStop Color="#10B981" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel>
                            <Border Background="{StaticResource PlayfairAccent}"
                                    Width="70" Height="70" CornerRadius="35"
                                    HorizontalAlignment="Center" Margin="0,0,0,15">
                                <Border.Effect>
                                    <DropShadowEffect Color="#10B981" BlurRadius="12" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>
                                </Border.Effect>
                                <TextBlock Text="🧩" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Playfair Cipher"
                                      FontSize="24" FontWeight="Bold"
                                      Foreground="{StaticResource TextBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Bigram substitution using 5x5 matrix"
                                      FontSize="13" LineHeight="20"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"
                                      Margin="0,0,0,25"/>
                            <Button Content="Try It →"
                                   Style="{StaticResource ModernButton}"
                                   Click="PlayfairButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Hill Cipher -->
                    <Border Style="{StaticResource CardStyle}" Margin="10" x:Name="HillCard"
                            PreviewMouseDown="HillCard_MouseDown">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2A2F45" Offset="0"/>
                                <GradientStop Color="#3B82F6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel>
                            <Border Background="{StaticResource HillAccent}"
                                    Width="70" Height="70" CornerRadius="35"
                                    HorizontalAlignment="Center" Margin="0,0,0,15">
                                <Border.Effect>
                                    <DropShadowEffect Color="#3B82F6" BlurRadius="12" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>
                                </Border.Effect>
                                <TextBlock Text="🏔️" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Hill Cipher"
                                      FontSize="24" FontWeight="Bold"
                                      Foreground="{StaticResource TextBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Linear algebra based polygraphic cipher"
                                      FontSize="13" LineHeight="20"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"
                                      Margin="0,0,0,25"/>
                            <Button Content="Try It →"
                                   Style="{StaticResource ModernButton}"
                                   Click="HillButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Vigenère Cipher -->
                    <Border Style="{StaticResource CardStyle}" Margin="10" x:Name="VigenereCard"
                            PreviewMouseDown="VigenereCard_MouseDown">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2A2F45" Offset="0"/>
                                <GradientStop Color="#8B5CF6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel>
                            <Border Background="{StaticResource VigenereAccent}"
                                    Width="70" Height="70" CornerRadius="35"
                                    HorizontalAlignment="Center" Margin="0,0,0,15">
                                <Border.Effect>
                                    <DropShadowEffect Color="#8B5CF6" BlurRadius="12" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>
                                </Border.Effect>
                                <TextBlock Text="🌀" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Vigenère Cipher"
                                      FontSize="24" FontWeight="Bold"
                                      Foreground="{StaticResource TextBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Polyalphabetic substitution using keyword"
                                      FontSize="13" LineHeight="20"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"
                                      Margin="0,0,0,25"/>
                            <Button Content="Try It →"
                                   Style="{StaticResource ModernButton}"
                                   Click="VigenereButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Transposition Cipher -->
                    <Border Style="{StaticResource CardStyle}" Margin="10" x:Name="TranspositionCard"
                            PreviewMouseDown="TranspositionCard_MouseDown">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2A2F45" Offset="0"/>
                                <GradientStop Color="#06B6D4" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel>
                            <Border Background="{StaticResource TranspositionAccent}"
                                    Width="70" Height="70" CornerRadius="35"
                                    HorizontalAlignment="Center" Margin="0,0,0,15">
                                <Border.Effect>
                                    <DropShadowEffect Color="#06B6D4" BlurRadius="12" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>
                                </Border.Effect>
                                <TextBlock Text="🔀" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Transposition"
                                      FontSize="24" FontWeight="Bold"
                                      Foreground="{StaticResource TextBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Columnar transposition cipher"
                                      FontSize="13" LineHeight="20"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"
                                      Margin="0,0,0,25"/>
                            <Button Content="Try It →"
                                   Style="{StaticResource ModernButton}"
                                   Click="TranspositionButton_Click"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

                <!-- Footer -->
                <Border Background="{StaticResource CardGradient}"
                       CornerRadius="12"
                       Padding="25"
                       Margin="0,30,0,0"
                       BorderBrush="#2A2F45"
                       BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.25" RenderingBias="Performance"/>
                    </Border.Effect>
                    <TextBlock Text="🎓 Interactive demonstrations for Network Security course"
                              FontSize="15"
                              FontWeight="Medium"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              HorizontalAlignment="Center"
                              Opacity="0.85"/>
                </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Content Area (Cipher pages) -->
        <ContentControl x:Name="ContentArea" Visibility="Collapsed"/>
    </Grid>
</Window>
